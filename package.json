{
  "name": "styled-components-library",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for styled-components UI library with CSS variables, design tokens, and dark mode support",
  "scripts": {
    "dev": "pnpm --filter my-app dev",
    "dev:library": "pnpm --filter @ui/components dev",
    "build": "pnpm --filter @ui/components build && pnpm --filter my-app build",
    "build:library": "pnpm --filter @ui/components build",
    "build:app": "pnpm --filter my-app build",
    "preview": "pnpm --filter my-app preview",
    "lint": "pnpm --recursive lint",
    "lint:fix": "pnpm --recursive lint --fix",
    "type-check": "pnpm --recursive type-check",
    "type-check:library": "pnpm --filter @ui/components type-check",
    "type-check:app": "pnpm --filter my-app tsc --noEmit",
    "clean": "pnpm --recursive exec rm -rf dist node_modules",
    "clean:library": "pnpm --filter @ui/components exec rm -rf dist",
    "clean:app": "pnpm --filter my-app exec rm -rf dist",
    "test": "pnpm --recursive test"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "patch-package": "^8.0.0",
    "rollup": "^4.18.0",
    "typescript": "^5.0.0"
  },
  "pnpm": {
    "overrides": {
      "rollup": "^4.18.0"
    }
  }
}

